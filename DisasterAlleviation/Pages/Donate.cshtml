<body>
    <form action="POST">
         <div class= "label-content">
        <label for="date">Date:</label>
        <input type="date" id="date" name="donDate"><br>
        <label type="text" for="goodNum">No Goods</label>
        <input type="number" id="goodNum" name="pass"><br>
        <label type="text" for="goodName">Good Name</label>
        <input type="text" id="goodName" name="goodName"><br>

        <div class="categories">
            <fieldset class="position-categories">
                <legend>Category</legend>
                <div>
                    <input type="radio"  id="goodOne" name="goodsCategory" value="Clothes"><br>
                    <label for="goodOne">Clothes</label>
                </div>
               <div>
                    <input type="radio"  id="goodTwo"  name="goodsCategory"><br>
